{
  "manifest_version": 3,
  "name": "Teger AI: Forensic Sensor",
  "version": "1.0.0",
  "description": "Uncover social engineering using Gemini 3 reasoning.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://app.slack.com/*",
    "http://localhost:8000/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*", "https://app.slack.com/*"],
      "js": ["content.js"]
    }
  ]
}
